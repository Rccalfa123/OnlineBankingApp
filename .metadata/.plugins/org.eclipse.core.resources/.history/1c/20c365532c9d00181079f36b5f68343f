//this account extends the BankAccount .
//It has the specific instances Specific to the Saving account and their setters and getters.

package com.cg.bank.framework.account.pojo;

public abstract class SavingsAccount extends BankAccount {
	private boolean salary;
	private String accountType;

	//Constructor For Non-Zero balance. 
	public SavingsAccount(Customer accountHolder, double accountBalance, boolean salary, String accountType) {
		super(accountHolder, accountBalance,accountType);
		this.salary = salary;
		this.accountType = accountType;
	}

	//Constructor for Zero balance Account.
	public SavingsAccount(Customer accountHolder, double accountBalance, String accountType) {
		super(accountHolder, accountBalance,accountType);
		this.accountType = accountType;
	}
	

	public boolean isSalary() {
		return salary;
	}
	
	

	public String getAccountType() {
		return accountType;
	}



	public void setAccountType(String accountType) {
		this.accountType = accountType;
	}



	public void setSalary(boolean salary) {
		this.salary = salary;
	}

	@Override
	public String toString() {
		return "SavingsAccount [salary=" + salary + ", toString()=" + super.toString() + "]";
	}
}
